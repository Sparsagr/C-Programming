// (2)c PROGRAM (IF-ELSE):: negative,positive,zero ...!!
#include <stdio.h>
int main() 
{
    int a;
    printf("enter two numbers::");
    scanf("%d",&a);
    if(a>0)
    {
        printf("a is positive");
    }
    if(a<0)
    {
        printf("a is negative");
    }
    if(a==0)
    {
        printf("it is zero");
    }
    return 0;
}
